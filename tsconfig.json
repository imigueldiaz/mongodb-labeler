{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ES2022",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"declaration": true,
		"outDir": "./dist",
		"strict": true,
		"skipLibCheck": true,
		"lib": ["ES2022", "DOM"],
		"types": ["node", "jest"],
		"strictPropertyInitialization": false
	},
	"include": [
		"src/**/*.ts",
		"src/**/__tests__/**/*.ts"
	],
	"exclude": [
		"node_modules"
	]
}

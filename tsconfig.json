{
	"compilerOptions": {
		"target": "ES2020",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"esModuleInterop": true,
		"declaration": true,
		"outDir": "dist",
		"strict": true,
		"skipLibCheck": true,
		"lib": ["ES2021", "DOM"],
		"types": ["node", "jest"],
		"strictPropertyInitialization": false
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "**/*.test.ts"]
}
